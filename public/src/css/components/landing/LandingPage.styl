@import '../../variables/color.styl'

.landing--container 
  max-width: 320px
  margin: 0 auto
  text-align: center


.landing--wrapper 
  background: $flat-black
  box-sizing: border-box
  padding: 1.5rem 1rem
  border-radius: 3px


.landing--header 
  color: $flat-black
  font-weight: 300
  font-size: 4rem
  text-align: center
  margin-top: 0
  margin-bottom: 0.35em

.landing--form > .form--group:first-child
  margin-top: 1.5rem

.landing--header--grey 
  color: $light-grey


.landing--header--blue 
  color: $primary-blue


.section--header 
  font-weight: bold
  font-size:1.2rem 
  border-bottom: 1px solid $primary-pink
  padding-bottom: .25em
  margin-bottom: .25em


.login--reg--toggle 
  font-size: .8rem

.login--err {
  text-align: center
  display: inline-block
  margin-bottom: 1rem
  width: 100%
}





