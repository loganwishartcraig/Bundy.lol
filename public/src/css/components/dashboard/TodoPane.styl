@import '../../variables/color.styl'

.todo--container {
  height: 85%
}

.todo--create--desc {
  width: 100%
  text-align: center
  display: inline-block
  padding: 2em 0
}

.todo--filters {
  padding: .5em 0
  border-bottom: 1px solid $primary-pink
  vertical-align: middle
}

.todo--filters  > li {
  display: inline-block
  margin: 0 .5em
  vertical-align: middle;
}

.todo--filter > button {
  padding: .25em 1em
  font-weight: bold
  transition: all 150ms ease-in-out
  
  &.active, &.active:hover {
    background: $primary-pink
    color: $flat-black
    border-color: $primary-pink
  }
  
}

.todo--owner {
  font-weight: 400
}

.todo--list {
  flex-grow: 2
  border-bottom: 1px solid $primary-pink
  overflow-y: auto
  position: relative

  &.empty > li {
    text-align: center
    position: absolute
    bottom: 50%
    left: 0
    transform: translateY(-50%)
    width: 100%
    font-style: italic
    color: $light-grey
  }

}

.empty--req--add {
  font-style: italic
  text-decoration: underline
  display: inline-block
}

.todo--add {
  position: relative
  text-align: right
  padding: 1em
}

.manage--group--btn {
  position: absolute
  left: 1em
}


.todo--item {
  padding: 1em 
  border-bottom: 1px solid $dark-grey
  position: relative
  overflow: hidden;
  
  &:not(:hover) .todo--options {
    display: none 
  }
  
  &:hover .todo--options {
    display: inline-block 
  }

  &.complete .todo--meta {
    color: $medium-grey
    & .todo--request {
      color: $medium-grey
    }
  }
}

.todo--complete--btn {
  display: inline-block
  vertical-align: middle
}

.todo--meta {
  display: inline-block
  vertical-align: middle
  padding-left: 1em
  width: 60%;
}

.todo--request {
  display: block
  color: $light-grey
}

.todo--options {
  position: absolute
  right: 1em
  top: 50%
  transform: translateY(-50%)
  
  & > button {
    margin-right: .75em
  }

}


.todo--btn--save {
  margin-left: .75em
}

.todo--input--edit {
  margin-bottom: .5em
  font-style: italic
}

.todo--create--actions {
  text-align: left
  width: 100%
  margin-top: 1rem
  
  > button:first-child {
    margin-right: 1rem
  }
}

.todo--edit--actions > button:first-child {
  margin: 0 1em
}

.todo--form {
  position: relative
  height: 100%
}

.todo--create--input {
  flex-grow: 2
  // text-align: center
  max-width: 450px
  width: 100%
  margin: 0 auto
  
  & label[for="favorite"] {
    margin-left: .5rem
  }

}

.no--group--msg {

  position: relative
  height: 100%

  & > span {

    color: $light-grey
    font-style: italic
    display: inline-block
    width: 100%
    text-align: center
    position: absolute
    bottom: 50%
    left: 0px
    transform: translateY(-50%)

  }

}


.add--todo--container {
  flex-grow: 2
}

.todo--fave--container {
  flex-grow: 2
}

.todo--fave--header {
  margin-top: .5em
}

.todo--fave--list {
  position: relative
  flex-grow: 2
  border-top: 1px solid $medium-grey
}
.todo--fave {

  &:not(:hover) .fave--del--btn {
    display: none  
  }
  
  &:hover .fave--del--btn {
    display: inline-block
  }
  
}

.fave--del--btn  {
  position: absolute
  right: 1em
}

.todo--fave--actions {
  padding: 1em
  text-align: right
}