@import '../../variables/color.styl'


.group--container {
  height: 47.5%
  display: flex;
  flex-direction: column;
  padding: 0 1rem;
}

.group--header {
  font-weight: bold
  display: block
  padding: .25em
  margin: .5rem 1rem
  margin-bottom: 1rem
  text-align: center
  border-bottom: 1px solid $primary-pink
}

.group--actions {
  height: 100%
}

.group--selector {
  overflow-y: auto
}

.group--btn {
  width: 100%
  padding: .5em 0
  padding-left: 1.25em
  margin-bottom: 3px
  border-left: 3px solid $medium-grey
  // border-bottom: 1px solid $dark-grey
  transition: all 150ms ease-in-out
  text-align: left  
  white-space: nowrap;
  text-overflow: ellipsis
  overflow: hidden
  color: $medium-grey
  &.active {
    border-left-color: $primary-pink
    // border-left-width: 6px
    color: $primary-pink
  }
  
  &:not(.active):hover {
    border-color: $primary-blue
    // border-left-width: 6px
    color: $primary-blue
  }
}

.group--add--btn {
  display: block
  margin: 1em auto  
  padding: .5em 1em
  font-weight: bold
}



.group--join--actions {
  text-align: center
  margin-top: 1.25em

  > button:first-of-type {
    margin-right: .5em
  }
}

.group--container .text--btn--grey {
  display: block
  margin: 0 auto
}








.group--manage--container {
  height: 85%
}

.group--member--list {
  flex-grow: 2;
  overflow-y: auto;
  border-bottom: 1px solid $primary-pink
  
  & > li:last-of-type {
    border-bottom: none
  }
}

.group--member {
  padding: 1em
  border-bottom: 1px solid $medium-grey
}

.group--member--actions {
  padding: 1em

 > button:not(:last-of-type) {
  margin-right: 1em
 }
}

