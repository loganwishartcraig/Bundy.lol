@import '../variables/color.styl'

/* Forms */

.form--root 
  text-align: left

.input--label 
  display: block
  margin-bottom: .25em

.input--label--sm
  display: block
  margin-bottom: .2em

.input--label--inline 
  display: inline-block

.page--tab {
    padding: 1.5em 0 1em 1em;
    width: 50%;
    text-align: center;
    transition: all 150ms ease-in-out;

  &:not(.active) {
    color: $medium-grey
    border-bottom: 1px solid $medium-grey
  
    &:hover {
      color: $primary-blue
      border-color: $primary-blue
    }
  }
  
  &.active {
    color: $primary-pink
    font-weight: bold
    border-bottom: 1px solid $primary-pink
  }
  
}

input[class*="form--input"],
textarea[class*="form--input"]
  background: none
  outline: none
  border: none
  box-shadow: none
  color: $flat-white
  box-sizing: border-box


input.form--input[type="text"], 
input.form--input[type="email"], 
input.form--input[type="password"],
textarea.form--input 
  background: #141414
  padding: .65em
  border-top: 1px solid $dark-grey
  border-bottom: 1px solid $dark-grey
  transition: border-color 150ms ease-in-out

  &:focus {
    border-color: $primary-blue
  }

input.form--input--sm[type="text"], 
input.form--input--sm[type="email"], 
input.form--input--sm[type="password"],
textarea.form--input--sm
  background: #141414
  padding: .5em
  border-top: 1px solid $dark-grey
  border-bottom: 1px solid $dark-grey
  transition: border-color 150ms ease-in-out

  &:focus {
    border-color: $primary-blue
  }


input.form--input[type="checkbox"] 
  display: none

input.form--input[type="checkbox"] + span::before 
  font-family: FontAwesome
  content: '\f0c8\00a0\00a0'
  color: $dark-grey
  transition: color 150ms ease-in-out


input.form--input[type="checkbox"]:checked + span::before 
  font-family: FontAwesome
  content: '\f14a\00a0\00a0'
  color: $primary-pink



button.btn--primary 
  color: $flat-black
  background: $primary-pink
  font-weight: bold
  border-radius: 3px
  transition: background 150ms ease-in-out


button.btn--primary:hover 
  background: $light-pink


button.secondary--btn {
  padding: .3em 1.25em
  border: 1px solid $medium-grey
  color: $medium-grey
  text-align: center
  font-weight: bold
  border-radius: 3px
  transition: all 150ms ease-in-out

  &:hover {
    color: $primary-blue
    border-color: $primary-blue
  }
}



button.bold--btn--pink {
  background: $primary-pink
  color: $flat-black
  border-radius: 3px
  font-weight: bold
  transition: background 150ms ease-in-out
  vertical-align: middle
  
  &:hover {
    background: $light-pink
  }
}

.wire--btn--blue {
  color: $medium-grey
  border: 1px solid $medium-grey
  border-radius: 3px
  transition: color 150ms ease-in-out, border-color 150ms ease-in-out;
  
  &:hover {
    color: $primary-blue
    border-color: $primary-blue
  }
}

.wire--btn--red {
  color: $medium-grey
  border: 1px solid $medium-grey
  border-radius: 3px
  transition: color 150ms ease-in-out, border-color 150ms ease-in-out;
  
  &:hover {
    color: red
    border-color: red
  }
}

.wire--btn--pink {
  color: $primary-pink
  border: 1px solid $primary-pink
  border-radius: 5px
  transition: all 150ms ease-in-out
  
  &:hover {
    color: $primary-blue
    border-color: $primary-blue
  }
  
  &:disabled {
    color: $medium-grey
    border-color: $medium-grey
    // font-style: italic
  }

}

.text--btn--grey {
  color: $medium-grey
  transition: color 150ms ease-in-out
  &:hover {
    color: $light-grey
  }
}

.light--text--btn {
  color: $light-grey
  transition: color 150ms ease-in-out
  &:hover {
    color: $primary-blue
  }
}

.btn--lg {
  padding: .75em 3em
}

.btn--md {
  padding: .75em 1.5em
}

.btn--sm 
  padding: .65em .25em

.form--group 
  margin-bottom: 1.5rem 
  
.form--group--sm
  margin-bottom: .5rem
  
.err--msg {
  color: red
  font-style: italic
}




.add--btn::before {
  font-family: FontAwesome
  content: '\f055\00a0'
  font-weight: 400
  vertical-align: text-top
}

.btn--cancel::before {
  font-family: FontAwesome
  content: '\f05e\00a0'
  font-weight: 400
}

.btn--edit::before {
  font-family: FontAwesome
  content: '\f040\00a0'
  font-weight: 400
}

.btn--delete::before {
  font-family: FontAwesome
  content: '\f00d\00a0'
  font-weight: 400
}

.btn--save::before {
  font-family: FontAwesome
  content: '\f0c7\00a0'
  font-weight: 400
}

.btn--group::before {
  font-family: FontAwesome
  content: '\f0c0\00a0'
  font-weight: 400
  vertical-align: text-top
}

.btn--file::before {
  font-family: FontAwesome
  content: '\f016\00a0'
  font-weight: 400
}

.btn--back::before {
  font-family: FontAwesome
  content: '\f112\00a0'
  font-weight: 400
}

.btn--warn::before {
  font-family: FontAwesome
  content: '\f071\00a0'
  font-weight: 400
}

  /* Autofill styles */



input:-webkit-autofill,
input:-webkit-autofill:hover, 
input:-webkit-autofill:focus
input:-webkit-autofill, 
textarea:-webkit-autofill,
textarea:-webkit-autofill:hover
textarea:-webkit-autofill:focus,
select:-webkit-autofill,
select:-webkit-autofill:hover,
select:-webkit-autofill:focus {
  -webkit-text-fill-color: $flat-white;
  -webkit-box-shadow: 0 0 0px 1000px $flat-black inset;
  color: $flat-white !important;
}